{
  "name": "pokedex-test-app",
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "pre-install": "npm install --ignore-engines",
    "start": "run-p start:*",
    "start:client": "npm -w client start",
    "start:server": "npm -w server run build && npm -w server start",
