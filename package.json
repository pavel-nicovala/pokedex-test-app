    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.0"
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "svgo": {
      "css-select": "^5.1.0",
      "nth-check": "^2.1.1"
    },
    "postcss": "^8.4.31",
    "resolve-url-loader": {
      "postcss": "^8.4.31"
    },
    "semver": "^7.5.4",
    "simple-update-notifier": "^2.0.0",
    "webpack-dev-server": "^5.2.0"
